{
    "plugins": ["@trivago/prettier-plugin-sort-imports"],

    "endOfLine": "auto",

    "importOrder": [
        "^components/(.*)$",
        "^[enums|hooks|state|types|utilities]",
        "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,

    "insert_final_newline": true,

    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "es5"
}
